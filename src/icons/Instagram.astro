---
export interface Props {
    class?: string;
    'aria-hidden'?: boolean;
}

const { class: className, 'aria-hidden': ariaHidden = true } = Astro.props;
---

<svg class={className} aria-hidden={ariaHidden} xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
    <circle cx="12" cy="12" r="3"/>
    <circle cx="17.5" cy="6.5" r="1"/>
</svg>